jQuery ->
  $(".data_table").dataTable
    "bJQueryUI": true
    "sPaginationType": "full_numbers"
    "bDestroy": true
    "oLanguage":
      <% if  "#{t :locale}" == "en" %>
        "sUrl":     "/assets/dataTables.english.txt"
      <% else %>
        "sUrl":     "/assets/dataTables.spanish.txt"
      <% end %>
  $('.data_table').css('width', '')
